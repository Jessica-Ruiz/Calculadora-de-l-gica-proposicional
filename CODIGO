def calcular_tabla_verdad(variables, funcion):
    # Generar todas las combinaciones de valores de verdad
    #con el itertools se pueden crear listas de combinaciones para las variables que se definan.
    combinaciones = list(itertools.product([False, True], repeat=len(variables)))
